@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Secret.</p>

@{
    if (this.IfClaim("Produtos", "Adicionar"))
    {
        <p>Você só vera isso se tiver permissão de adicionar</p>
    }
}

<div>
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context, "Produtos", "Adicionar")
</div>

<div>
    <a href="#" class="btn btn-danger" @Html.Raw(this.IfClaimShow("Produtos", "Adicioanar"))>Excluir</a>
</div>